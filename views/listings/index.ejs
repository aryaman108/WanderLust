<% layout("/layouts/boilerplate") %>

    <style>
        .filter{
            text-align: center;
            margin: 1.2rem;
            opacity: 0.7;
            font-size: 0.8rem;
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
            transform: scale(1.1);
            transition: all 0.3s ease-in-out;
        }

        #filters{
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
        }
    </style>
    <!-- <h3>All Listings</h3> -->
     <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" 
                type="checkbox" 
                role="switch" 
                id="flexSwitchCheckDefault">
                <label class="form-check-label" 
                for="flexSwitchCheckDefault">Display taxes</label>
              </div>
        </div>
     </div>

    <div class="mt-1">
        <form method="GET" action="/listings/new">
            <button class="btn btn-dark add-btn">Create new Listing</button>
        </form>
    </div>
    <div class="row row-cols-lg-3 row-cols-sm-1 mt-3 g-4">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col" >
  <img src="<%= listing.image.url %>" 
  class="card-img-top" alt="listing_image" 
  style="height: 20rem;">

  <!-- Card Image overlay above the image it shows text. -->
  <div class="card-img-overlay"></div>

  <div class="card-body ">
    <p class="card-text"> <b><%= listing.title %> <br/></b>
     &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
     Owner: <%= listing.owner ? listing.owner.username : 'Unknown' %>
    </p>
  </div>
</div>
</a>
    <% } %>
    </div>



<script>
    let taxToggle = document.getElementById('flexSwitchCheckDefault');
    taxToggle.addEventListener('change',()=>{
        let allPrices = document.querySelectorAll('.card-text b');
        if(taxToggle.checked){
            allPrices.forEach((priceElement)=>{
                let priceText = priceElement.innerHTML;
                let priceMatch = priceText.match(/₹\s*([\d,]+)/);
                if(priceMatch){
                    let priceValue = parseFloat(priceMatch[1].replace(/,/g, ''));
                    let newPrice = (priceValue * 1.18).toFixed(2);
                    priceElement.innerHTML = priceText.replace(/₹\s*[\d,]+/, `₹ ${parseFloat(newPrice).toLocaleString("en-IN")}`);
                }
            });
        } else {
            allPrices.forEach((priceElement)=>{
                let priceText = priceElement.innerHTML;
                let priceMatch = priceText.match(/₹\s*([\d,]+)/);
                if(priceMatch){
                    let priceValue = parseFloat(priceMatch[1].replace(/,/g, ''));
                    let originalPrice = (priceValue / 1.18).toFixed(2);
                    priceElement.innerHTML = priceText.replace(/₹\s*[\d,]+/, `₹ ${parseFloat(originalPrice).toLocaleString("en-IN")}`);
                }
            });
        }
    });
</script>
